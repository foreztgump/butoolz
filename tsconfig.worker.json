{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./public/workers",
    "module": "ESNext",
    "target": "ES2020",
    "lib": ["ES2020", "WebWorker"],
    "noEmit": false,
    "isolatedModules": false,
    "sourceMap": false,
    "declaration": false
  },
  "include": [
    "app/shapedoctor/solver.worker.ts",
    "types/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    ".next",
    "public",
    "app/[!shapedoctor]/**/*",
    "components/**/*",
    "lib/**/*",
    "scripts/**/*"
  ]
} 